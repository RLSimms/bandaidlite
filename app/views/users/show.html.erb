<p id="notice"><%= notice %></p>

<%= link_to 'Edit', edit_user_path(@user), class: 'btn btn-inverse' %> |
<%= link_to 'Back', users_path, class: 'btn btn-inverse' %>

<br>
<br>
<br>

<p>
  <b>Name:</b>
  <%= @user.name %>
</p>

<p>
  <b>Photo:</b><br />
  <%= image_tag @user.photo, :width => 200 %>
</p>

<p>
  <b>Address:</b>
  <%= @user.address %>
</p>

<p>
  <b>Date of Birth:</b>
  <%= @user.dob %>
</p>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<p>
  <b>This User plays these Instruments:</b><br />
  <% @user.skills.each do |skill| %>
  <li><%= skill.instrument.name %></li><br />
  <% end %>
</p>

<p>
  <b>Interests:</b><br />
  <% @user.interests.each do |interest| %>
  <%= interest.genre.name %>
  <% end %>
</p>

<% if current_user == @user %>

<p>
  <b>Sent Messages:</b><br />
  <table class="table table-hover">
    <tr>
      <th>To:</th>
      <th>Message:</th>
    <tr/>

  <% @user.sent_messages.each do |sent_message| %>
  <tr>
    <td><%= sent_message.receiver.name %></td>
    <td><%= sent_message.whats_written %></td>
    <td><%= link_to "Reply", new_message_url, class: 'btn btn-inverse' %></td>
  </tr>
  <% end %>
</table>

</p>

<p>
  <b>Received Messages:</b><br />
  <table class="table table-hover">
    <tr>
      <th>From:</th>
      <th>Message</th>
    </tr>

  <% @user.received_messages.each do |received_message| %>
    <tr>
      <td><%= received_message.sender.name %></td>
      <td><%= received_message.whats_written %></td>
      <td><%= link_to "Reply", new_message_url, class: 'btn btn-inverse' %></td>
    </tr>
  <% end %>
</table>

<% end %>

</p>


