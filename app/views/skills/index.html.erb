<h1>Skills</h1>

<p class='btn btn-inverse'><%= link_to 'New Skill', new_skill_path %></p>

<br>
<br>
<br>

<table class="table table-hover">
  <tr>
    <th>User</th>
    <th>Instrument</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @skills.each do |skill| %>
  <tr>
    <td><%= skill.user.try(:name) %></td>
    <td><%= skill.instrument.name %></td>
    <td><%= link_to 'Show', skill, class: 'btn btn-inverse' %></td>
    <td><%= link_to 'Edit', edit_skill_path(skill), class: 'btn btn-inverse' %></td>
    <td><%= link_to 'Destroy', skill, class: 'btn btn-inverse', method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />


