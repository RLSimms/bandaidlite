<h1>Interests</h1>

<%= link_to 'New Interest', new_interest_path, class: 'btn btn-inverse' %>

<br>
<br>

<table class="table table-hover">
  <tr>
    <th>User</th>
    <th>Genre</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @interests.each do |interest| %>
  <tr>
    <td><%= interest.user.name %></td>
    <td><%= interest.genre.name %></td>
    <td><%= link_to 'Show', interest, class: 'btn btn-inverse' %></td>
    <td><%= link_to 'Edit', edit_interest_path(interest), class: 'btn btn-inverse' %></td>
    <td><%= link_to 'Destroy', interest, class: 'btn btn-inverse', method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />


